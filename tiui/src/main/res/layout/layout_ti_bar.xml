<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tiNumberTV"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp"
        android:gravity="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tiBubbleTV"
            android:layout_width="34dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_ti_bubble_white"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textColor="@color/ti_bubble_gray"
            android:textSize="10sp"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/tiSeekBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:background="@null"
            android:max="100"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:progress="0"
            android:progressDrawable="@drawable/bg_ti_seek_bar"
            android:thumb="@drawable/ic_ti_seek_bar_thumb" />

        <View
            android:id="@+id/tiProgressV"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10.25dp"
            android:background="@drawable/bg_ti_bar_process" />

        <View
            android:id="@+id/tiMiddleV"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="9dp"
            android:background="@drawable/bg_circle_round"  />
    </FrameLayout>

    <ImageView
        android:id="@+id/tiRenderEnableIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="25dp"
        android:contentDescription="@null"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:paddingTop="6dp"
        android:src="@drawable/ic_ti_render_white" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/btn_appointment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar_appointment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_msg_appointment"
            app:riv_oval="true"
            />

        <TextView
            android:id="@+id/name_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/avatar_appointment"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/im_appointment"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/msg_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_appointment"
            android:layout_marginRight="80dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/avatar_appointment"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_arrow_right"
            android:tint="#BEBEBE"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background"
        />

    <RelativeLayout
        android:id="@+id/btn_system_msg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_msg_sys"
            app:riv_oval="true"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/im_system_msg"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginRight="80dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray1"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/red_point"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="14dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            />

        <View
            style="@style/line2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
</LinearLayout>

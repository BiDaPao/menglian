<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_filter"
    >

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="12dp"
        android:src="@mipmap/icon_live_close_2"
        android:tint="@color/gray3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_filter_tip_1"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <com.aihuan.common.custom.DrawableRadioButton
                android:id="@+id/btn_sex_all"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:gravity="center_horizontal"
                android:text="@string/main_all"
                android:textColor="@color/fg_btn_main_filter"
                android:textSize="12sp"
                app:dt_top_drawable="@drawable/bg_main_filter_sex_all"
                app:dt_top_height="50dp"
                app:dt_top_width="50dp"
                android:clickable="true"
                />

            <com.aihuan.common.custom.DrawableRadioButton
                android:id="@+id/btn_sex_famale"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:gravity="center_horizontal"
                android:text="@string/sex_female"
                android:textColor="@color/fg_btn_main_filter"
                android:textSize="12sp"
                app:dt_top_drawable="@drawable/bg_main_filter_sex_famale"
                app:dt_top_height="50dp"
                app:dt_top_width="50dp"
                android:clickable="true"
                />

            <com.aihuan.common.custom.DrawableRadioButton
                android:id="@+id/btn_sex_male"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:gravity="center_horizontal"
                android:text="@string/sex_male"
                android:textColor="@color/fg_btn_main_filter"
                android:textSize="12sp"
                app:dt_top_drawable="@drawable/bg_main_filter_sex_male"
                app:dt_top_height="50dp"
                app:dt_top_width="50dp"
                android:clickable="true"
                />

        </RadioGroup>
        <LinearLayout
            android:id="@+id/group_call_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/main_filter_tip_2"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/btn_type_all"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_main_filter_type"
                android:button="@null"
                android:gravity="center"
                android:text="@string/main_all"
                android:textColor="@color/fg_btn_main_filter_2"
                android:textSize="12sp"
                />

            <RadioButton
                android:id="@+id/btn_type_video"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/bg_main_filter_type"
                android:button="@null"
                android:gravity="center"
                android:text="@string/video"
                android:textColor="@color/fg_btn_main_filter_2"
                android:textSize="12sp"
                />

            <RadioButton
                android:id="@+id/btn_type_voice"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_main_filter_type"
                android:button="@null"
                android:gravity="center"
                android:text="@string/voice"
                android:textColor="@color/fg_btn_main_filter_2"
                android:textSize="12sp"
                />

        </RadioGroup>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

    </LinearLayout>
</FrameLayout>
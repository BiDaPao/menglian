<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <com.aihuan.common.custom.DrawableTextView
            android:id="@+id/btn_live"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:text="@string/main_start_live"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold"
            app:dt_top_drawable="@mipmap/icon_main_start_live"
            app:dt_top_height="70dp"
            app:dt_top_width="70dp"
            />

        <com.aihuan.common.custom.DrawableTextView
            android:id="@+id/btn_video"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginLeft="80dp"
            android:gravity="center_horizontal"
            android:text="@string/main_start_video"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold"
            app:dt_top_drawable="@mipmap/icon_main_start_video"
            app:dt_top_height="70dp"
            app:dt_top_width="70dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:src="@mipmap/icon_main_start_close"
        />
</LinearLayout>
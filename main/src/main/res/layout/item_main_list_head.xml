            </RelativeLayout>


            <TextView
                android:id="@+id/name_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@id/no2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/group_2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/name_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                >

                <ImageView
                    android:id="@+id/sex_2"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/level_2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <com.aihuan.common.custom.DrawableTextView
                android:id="@+id/votes_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/group_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:dt_left_drawable="@mipmap/icon_coin"
                app:dt_left_height="12sp"
                app:dt_left_width="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_data_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            >

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/icon_main_list_no_data"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/main_list_no_data_2"
                android:textColor="@color/white"
                android:textSize="14sp"
                />


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_3"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        >

        <LinearLayout

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    />

                <ImageView
                    android:id="@+id/no2"

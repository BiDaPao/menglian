<?xml version="1.0" encoding="utf-8"?>
<com.aihuan.common.custom.MyRelativeLayout1
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="5dp"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        />

    <com.aihuan.common.custom.RatioRoundImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/bg_main_item_bottom"
        app:ri_ratio="0.5"
        app:riv_corner_radius_bottom_left="5dp"
        app:riv_corner_radius_bottom_right="5dp"
        />

    <LinearLayout
        android:id="@+id/price_group"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/price_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@id/price_group"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/level"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/video"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/o_main_use_video"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/o_main_use_voice"
            android:visibility="gone"
            />
    </LinearLayout>



    <ImageView
        android:id="@+id/on_line"
        android:layout_width="36dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        />

</com.aihuan.common.custom.MyRelativeLayout1>